{
  "name": "adomis",
  "version": "1.0.0",
  "description": "Static web site for the Astronomical Society of Omis.",
  "main": "index.js",
  "watches": {
    "build:css": "styles/**",
    "build:js": "js/**"
  },
  "scripts": {
    "sass": "node-sass styles/main.scss public/style.css",
    "autoprefixer": "postcss --use autoprefixer -b 'last 2 versions' public/style.css | postcss --use cssnano -o public/style.css",
    "lint": "eslint -c .eslintrc.json --color js/**",
    "build:css": "npm run sass && npm run autoprefixer",
    "build:js": "npm run lint && rollup -c",
    "watch": "rerun-script",
    "deploy": "surge ./ https://adomis.surge.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brbrakus/adomis.git"
  },
  "keywords": [],
  "author": "Bruna Brakus, Miro Dojkic",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/brbrakus/adomis/issues"
  },
  "homepage": "https://github.com/brbrakus/adomis#readme",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "cssnano": "^3.10.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.1",
    "node-sass": "^4.5.3",
    "postcss": "^6.0.6",
    "postcss-cli": "^4.1.0",
    "rerun-script": "^0.6.0",
    "rollup": "^0.43.0",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-uglify": "^2.0.1",
    "surge": "^0.19.0"
  }
}
